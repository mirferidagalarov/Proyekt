@model DepartmentToListDTO
<form method="post" asp-controller="Department" asp-action="Update">

    <div class="form-group">
        <label for="id">id</label>
        <input asp-for="DepartmentId" type="text" hidden class="form-control" id="id" placeholder="enter username" />
    </div>
    <div class="form-group">
        <label for="departmentname">DepartmentName</label>
        <input asp-for="DepartmentName" type="text" class="form-control" id="departmentname" placeholder="enter departmentname" />
    </div>   

    <button type="submit" class="btn btn-success">Save</button>

</form>